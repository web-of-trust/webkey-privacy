#!/usr/bin/env php
<?php declare(strict_types=1);

define('BASE_DIR', dirname(__DIR__));
require_once BASE_DIR . '/vendor/autoload.php';

use Minicli\Factories\AppFactory;
use Minicli\Logging\LogLevel;
use Minicli\Logging\LogType;

$app = AppFactory::make([
    'app_name' => 'Webkey Privacy CLI',
    'app_path' => [
        BASE_DIR . '/app/src/Command',
        '@minicli/command-help'
    ],
    'logs_path' => BASE_DIR . '/var/log',
    'logging' => [
        'type' => LogType::DAILY->value,
        'level' => LogLevel::INFO->value,
        'timestamp_format' => 'Y-m-d H:i:s',
    ],
    'debug' => false,
], './bin/webkey help');

$app->runCommand($argv);
