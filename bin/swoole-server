#!/usr/bin/env php
<?php declare(strict_types=1);

define('BASE_DIR', dirname(__DIR__));
require_once BASE_DIR . '/vendor/autoload.php';

use App\Application\Kernel;
use Dotenv\Dotenv;
use Swoole\HTTP\{
    Request,
    Response,
    Server,
};

Dotenv::createImmutable(BASE_DIR)->safeLoad();

$server = new Server(
    Kernel::getEnvValue('openswoole.server_host') ?? '0.0.0.0',
    Kernel::getEnvValue('openswoole.server_port') ?? 9501
);
$server->set([
    'worker_num' => (int) shell_exec('nproc') * 2,
    'log_level'  => Kernel::getEnvValue('swoole.log_level') ?? 5,
    'log_file'   => Kernel::getEnvValue('swoole.log_file') ?? BASE_DIR . '/var/log/swoole.log',
    'daemonize'  => Kernel::getEnvValue('swoole.daemonize') ?? false,
    'pid_file'   => Kernel::getEnvValue('swoole.pid_file') ?? BASE_DIR . '/var/run/swoole.pid',
]);

$server->on('start', static function (Server $server) {
    echo "Swoole http server is started at http://{$server->host}:{$server->port}\n";
});

$server->on('request', static function (Request $request, Response $response) {
    ob_start();
    Kernel::serve();
    header('Date: ' . gmdate('D, d M Y H:i:s') . ' GMT');
    $response->end(ob_get_clean());
});

$server->start();
